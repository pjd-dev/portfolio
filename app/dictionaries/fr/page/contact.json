{
  "title": "Darrybook - Portfolio of Jean Paulette | Formulaire de contact",
  "subtitle": "Vous avez un projet en tête ou simplement envie de dire bonjour ?",
  "meta": { "version": 1, "locale": "fr" },
  "sections": [
    {
      "kind": "form",
      "id": "form_contact_fr",
      "meta": {
        "api": {
          "endpoint": "/api/form",
          "method": "POST",
          "headers": { "Content-Type": "application/json" }
        },
        "successRedirect": null,
        "captcha": false
      },
      "messages": {
        "success": "Message envoyé avec succès !",
        "error": "Échec de l'envoi du message. Veuillez réessayer.",
        "validation": "Certains champs sont invalides.",
        "loading": "Envoi en cours..."
      },
      "fields": [
        {
          "id": "name",
          "label": "Nom",
          "type": "text",
          "placeholder": "Votre nom",
          "required": true,
          "width": "1/2",
          "messages": {
            "required": "Ce champ est requis",
            "minLength": "2"
          }
        },
        {
          "id": "email",
          "label": "Email",
          "type": "email",
          "placeholder": "votre.email@exemple.com",
          "required": true,
          "width": "1/2",
          "messages": {
            "required": "Ce champ est requis",
            "invalid": "Veuillez entrer une adresse email valide"
          }
        },
        {
          "id": "subject",
          "label": "Sujet",
          "type": "select",
          "required": true,
          "width": "full",
          "options": [
            { "value": "recruitment", "label": "Opportunité d'emploi" },
            { "value": "freelance", "label": "Projet Freelance" },
            { "value": "collab", "label": "Collaboration" },
            { "value": "other", "label": "Autre" }
          ],
          "messages": { "required": "Veuillez sélectionner un sujet" }
        },
        {
          "id": "company",
          "label": "Entreprise",
          "type": "text",
          "placeholder": "Nom de votre entreprise",
          "required": false,
          "width": "1/3",
          "showWhen": { "subject": ["freelance"] },
          "messages": { "minLength": "2" }
        },
        {
          "id": "budget",
          "label": "Budget",
          "type": "select",
          "required": false,
          "width": "1/3",
          "options": [
            { "value": "<1k", "label": "< 1 000 €" },
            { "value": "1k-3k", "label": "1 000 – 3 000 €" },
            { "value": "3k-5k", "label": "3 000 – 5 000 €" },
            { "value": "5k-10k", "label": "5 000 – 10 000 €" },
            { "value": "10k+", "label": "10 000 € +" }
          ],
          "showWhen": { "subject": ["freelance"] }
        },
        {
          "id": "deadline",
          "label": "Délai",
          "type": "text",
          "placeholder": "ex: 2 semaines, 1 mois",
          "required": false,
          "width": "1/3",
          "showWhen": { "subject": ["freelance"] }
        },
        {
          "id": "projectLink",
          "label": "Lien du projet",
          "type": "url",
          "placeholder": "https://votre-projet.com",
          "required": false,
          "width": "full",
          "showWhen": { "subject": ["collab"] },
          "messages": { "invalid": "Veuillez entrer une URL valide" }
        },
        {
          "id": "goal",
          "label": "Objectif du projet",
          "type": "text",
          "placeholder": "Décrivez ce que vous souhaitez accomplir",
          "required": false,
          "width": "full",
          "showWhen": { "subject": ["collab"] }
        },
        {
          "id": "message",
          "label": "Message",
          "type": "textarea",
          "placeholder": "Parlez-moi de votre projet ou de votre demande...",
          "required": true,
          "rows": 5,
          "width": "full",
          "messages": {
            "required": "Ce champ est requis",
            "minLength": "10"
          }
        }
      ],
      "privacy": "En envoyant ce formulaire, vous acceptez que vos données soient utilisées pour vous répondre.",
      "submit": "Envoyer le message",
      "ctas": []
    }
  ]
}
