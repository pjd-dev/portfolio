{
  "title": "Darrybook – Portfolio of Jean Paulette | Contact Form",
  "subtitle": "Have a project in mind or just want to say hello?",
  "meta": { "version": 1, "locale": "en" },
  "sections": [
    {
      "id": "contact_form_en",
      "kind": "form",
      "meta": {
        "api": {
          "endpoint": "/api/form",
          "method": "POST",
          "headers": { "Content-Type": "application/json" }
        },
        "successRedirect": null,
        "captcha": false
      },
      "messages": {
        "success": "Message sent successfully!",
        "error": "Failed to send message. Please try again.",
        "validation": "Some fields are invalid.",
        "loading": "Sending..."
      },
      "fields": [
        {
          "id": "name",
          "name": "name",
          "label": "Name",
          "type": "text",
          "placeholder": "Your name",
          "width": "1/2",
          "errors": [
            {
              "rule": { "type": "required" },
              "message": "This field is required"
            },
            {
              "rule": { "type": "minLength", "value": 2 },
              "message": "Must be at least 2 characters"
            }
          ]
        },
        {
          "id": "email",
          "name": "email",
          "label": "Email",
          "type": "email",
          "placeholder": "your.email@example.com",
          "width": "1/2",
          "errors": [
            {
              "rule": { "type": "required" },
              "message": "This field is required"
            },
            {
              "rule": { "type": "email" },
              "message": "Please enter a valid email address"
            }
          ]
        },
        {
          "id": "subject",
          "name": "subject",
          "label": "Subject",
          "type": "select",
          "width": "full",
          "options": [
            { "value": "recruitment", "label": "Job Opportunity" },
            { "value": "freelance", "label": "Freelance Project" },
            { "value": "collab", "label": "Collaboration" },
            { "value": "other", "label": "Other" }
          ],
          "errors": [
            {
              "rule": { "type": "required" },
              "message": "Please select a subject"
            }
          ]
        },
        {
          "id": "company",
          "name": "company",
          "label": "Company",
          "type": "text",
          "placeholder": "Your company name",
          "width": "1/3",
          "showWhen": {
            "mode": "and",
            "conditions": [{ "fieldId": "subject", "op": "in", "values": ["freelance"] }]
          },
          "errors": [
            {
              "rule": { "type": "minLength", "value": 2 },
              "message": "Must be at least 2 characters"
            }
          ]
        },
        {
          "id": "budget",
          "name": "budget",
          "label": "Budget",
          "type": "select",
          "width": "1/3",
          "options": [
            { "value": "<1k", "label": "< $1,000" },
            { "value": "1k-3k", "label": "$1,000 – $3,000" },
            { "value": "3k-5k", "label": "$3,000 – $5,000" },
            { "value": "5k-10k", "label": "$5,000 – $10,000" },
            { "value": "10k+", "label": "$10,000 +" }
          ],
          "showWhen": {
            "mode": "and",
            "conditions": [{ "fieldId": "subject", "op": "in", "values": ["freelance"] }]
          }
        },
        {
          "id": "deadline",
          "name": "deadline",
          "label": "Deadline",
          "type": "text",
          "placeholder": "e.g., 2 weeks, 1 month",
          "width": "1/3",
          "showWhen": {
            "mode": "and",
            "conditions": [{ "fieldId": "subject", "op": "in", "values": ["freelance"] }]
          }
        },
        {
          "id": "projectLink",
          "name": "projectLink",
          "label": "Project Link",
          "type": "url",
          "placeholder": "https://your-project.com",
          "width": "full",
          "showWhen": {
            "mode": "and",
            "conditions": [{ "fieldId": "subject", "op": "in", "values": ["collab"] }]
          },
          "errors": [
            {
              "rule": { "type": "url" },
              "message": "Please enter a valid URL"
            }
          ]
        },
        {
          "id": "goal",
          "name": "goal",
          "label": "Project Goal",
          "type": "text",
          "placeholder": "Describe what you want to achieve",
          "width": "full",
          "showWhen": {
            "mode": "and",
            "conditions": [{ "fieldId": "subject", "op": "in", "values": ["collab"] }]
          }
        },
        {
          "id": "message",
          "name": "message",
          "label": "Message",
          "type": "textarea",
          "placeholder": "Tell me more about your project or inquiry...",
          "rows": 5,
          "width": "full",
          "errors": [
            {
              "rule": { "type": "required" },
              "message": "This field is required"
            },
            {
              "rule": { "type": "minLength", "value": 10 },
              "message": "Message must be at least 10 characters"
            }
          ]
        }
      ],
      "privacy": "By submitting this form, you agree to your data being used to contact you.",
      "submit": "Send Message",
      "ctas": []
    }
  ]
}
