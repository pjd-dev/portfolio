{
  "title": "Darrybook – Portfolio of Jean Paulette | Contact Form",
  "subtitle": "Have a project in mind or just want to say hello?",
  "meta": { "version": 1, "locale": "en" },
  "sections": [
    {
      "kind": "form",
      "id": "contact_form_en",
      "meta": {
        "api": {
          "endpoint": "/api/form",
          "method": "POST",
          "headers": { "Content-Type": "application/json" }
        },
        "successRedirect": null,
        "captcha": false
      },
      "messages": {
        "success": "Message sent successfully!",
        "error": "Failed to send message. Please try again.",
        "validation": "Some fields are invalid.",
        "loading": "Sending..."
      },
      "fields": [
        {
          "id": "name",
          "label": "Name",
          "type": "text",
          "placeholder": "Your name",
          "required": true,
          "width": "1/2",
          "messages": {
            "required": "This field is required",
            "minLength": "2"
          }
        },
        {
          "id": "email",
          "label": "Email",
          "type": "email",
          "placeholder": "your.email@example.com",
          "required": true,
          "width": "1/2",
          "messages": {
            "required": "This field is required",
            "invalid": "Please enter a valid email address"
          }
        },
        {
          "id": "subject",
          "label": "Subject",
          "type": "select",
          "required": true,
          "width": "full",
          "options": [
            { "value": "recruitment", "label": "Job Opportunity" },
            { "value": "freelance", "label": "Freelance Project" },
            { "value": "collab", "label": "Collaboration" },
            { "value": "other", "label": "Other" }
          ],
          "messages": { "required": "Please select a subject" }
        },
        {
          "id": "company",
          "label": "Company",
          "type": "text",
          "placeholder": "Your company name",
          "required": false,
          "width": "1/3",
          "showWhen": { "subject": ["freelance"] },
          "messages": { "minLength": "2" }
        },
        {
          "id": "budget",
          "label": "Budget",
          "type": "select",
          "required": false,
          "width": "1/3",
          "options": [
            { "value": "<1k", "label": "< $1,000" },
            { "value": "1k-3k", "label": "$1,000 – $3,000" },
            { "value": "3k-5k", "label": "$3,000 – $5,000" },
            { "value": "5k-10k", "label": "$5,000 – $10,000" },
            { "value": "10k+", "label": "$10,000 +" }
          ],
          "showWhen": { "subject": ["freelance"] }
        },
        {
          "id": "deadline",
          "label": "Deadline",
          "type": "text",
          "placeholder": "e.g., 2 weeks, 1 month",
          "required": false,
          "width": "1/3",
          "showWhen": { "subject": ["freelance"] }
        },
        {
          "id": "projectLink",
          "label": "Project Link",
          "type": "url",
          "placeholder": "https://your-project.com",
          "required": false,
          "width": "full",
          "showWhen": { "subject": ["collab"] },
          "messages": { "invalid": "Please enter a valid URL" }
        },
        {
          "id": "goal",
          "label": "Project Goal",
          "type": "text",
          "placeholder": "Describe what you want to achieve",
          "required": false,
          "width": "full",
          "showWhen": { "subject": ["collab"] }
        },
        {
          "id": "message",
          "label": "Message",
          "type": "textarea",
          "placeholder": "Tell me more about your project or inquiry...",
          "required": true,
          "rows": 5,
          "width": "full",
          "messages": {
            "required": "This field is required",
            "minLength": "10"
          }
        }
      ],
      "privacy": "By submitting this form, you agree to your data being used to contact you.",
      "submit": "Send Message",
      "ctas": []
    }
  ]
}
