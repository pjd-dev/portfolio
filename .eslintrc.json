{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": ["next/core-web-vitals", "prettier"],
  "env": {
    "browser": true,
    "es2023": true,
    "node": true
  },
  "rules": {
    "@next/next/no-img-element": "off",
    "no-console": ["warn", { "allow": ["warn", "error"] }]
  },
  "overrides": [
    {
      "files": ["**/*.{test,spec}.{js,jsx,ts,tsx}"],
      "env": {
        "jest": true
      }
    }
  ]
}
